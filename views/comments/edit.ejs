<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container">
    <div class="jumbotron pt-3 pb-3 mt-3 mb-3">
        <div class="container">
          <h1 class="display-4" style="text-align: center;">Edit your Comment</h1>
        </div>
    </div>

    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/posts/<%=post_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Text:</label>
                    <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]" id="title">
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="button">Submit</button>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>
    </div> 
</div>

<%- include("../partials/footer")%>