<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container">
    <div class="jumbotron pt-3 pb-3 mt-3 mb-3">
        <div class="container">
          <h1 class="display-4" style="text-align: center;">Update Picutre of <%=post.title%></h1>
        </div>
    </div>

    <div class="row">
        <div style="width: 70%; margin: 30px auto;">
            <form action="/posts/picUpdate/<%=post._id%>?_method=PUT" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <label for="pic">Image:</label>
                    <input class="form-control" type="file" name="pic" accept="image/*" id="pic" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div> 
</div>

<%- include("../partials/footer")%>